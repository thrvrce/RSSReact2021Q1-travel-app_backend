{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
				"prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
				"project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint",
				"prettier"
    ],
    "rules": {
			"prettier/prettier": ["error"],
			"import/extensions": [
				"error",
				"ignorePackages",
				{
					"js": "never",
					"jsx": "never",
					"ts": "never",
					"tsx": "never"
				}
		 ]
    },
		"settings": {
			"import/resolver": {
				"node": {
					"extensions": [".js", ".jsx", ".ts", ".tsx"]
				}
			}
		}
}
